<!-- array in simple form to post to a nested route -->
<%= simple_form_for [project, ticket], html: { multipart: true } do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :tag_names %>
  <% number = 0 %>
  <%= render partial: "files/form", locals: { number: number } %>
  <%= f.button :submit, class: "btn-primary" %>
  <%= link_to "Add another file", 'javascript:', id: "add_another_file" %>
<% end %>