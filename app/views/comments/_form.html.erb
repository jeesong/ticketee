<strong>New comment</strong>
<%= simple_form_for [@ticket, @comment] do |f| %>
  <%= f.input :text %>
  <% authorized?(:"change states", @project) do %>
    <%= f.input :state_id, collection: @states.map { |s| [s.name, s.id] }, selected: @ticket.state_id %>
  <% end %>
  <%= f.button :submit, class: "btn-primary" %>
<% end %>